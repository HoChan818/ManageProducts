<mvc:View controllerName="manage_products.ManageProducts.controller.Object" 
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core">
	
	<ObjectHeader 
		id="objectHeader" 
		title="{ProductID}" 
		responsive="true"
		number="{ path: 'Price', formatter: '.formatter.numberUnit' }"
		numberUnit="{CurrencyCode}"
		titleActive="true"
		titlePress="onShowDetailPopover">
		<attributes>
			<ObjectAttribute id="objName" text="{Name}"/>
		</attributes>
		<statuses>
			<ObjectStatus text="{ parts:[ {path:'WeightUnit'}, {path:'WeightMeasure'}], 
								  formatter:'.formatter.delivery'}"/>
		</statuses>
	</ObjectHeader>

	<mvc:XMLView id="vProductDetails" viewName="manage_products.ManageProducts.view.ProductDetails"/>
	
	<core:Fragment id="fragSupplier" fragmentName="manage_products.ManageProducts.view.SupplierInfo"
				   type="XML"/>

</mvc:View>