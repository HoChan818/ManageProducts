<mvc:View controllerName="manage_products.ManageProducts.controller.Object" 
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core">
	
	<ObjectHeader 
		id="objectHeader" 
		title="{ProductID}" 
		responsive="true"
		number="{ path: 'Price', formatter: '.formatter.numberUnit' }"
		numberUnit="{CurrencyCode}">
		<attributes>
			<ObjectAttribute text="{Name}"/>
		</attributes>
	</ObjectHeader>

	<mvc:XMLView viewName="manage_products.ManageProducts.view.ProductDetails"/>
	
	<core:Fragment fragmentName="manage_products.ManageProducts.view.SupplierInfo"
				   type="XML"/>

</mvc:View>