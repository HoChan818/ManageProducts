<mvc:View controllerName="manage_products.ManageProducts.controller.Object" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc"
	xmlns:semantic="sap.f.semantic">
	
	<ObjectHeader 
		id="objectHeader" 
		title="{ProductID}" 
		number="{ path: 'Price', formatter: '.formatter.numberUnit' }"
		numberUnit="{CurrencyCode}">
		<attributes>
			<ObjectAttribute text="{Name}"/>
		</attributes>
	</ObjectHeader>
</mvc:View>